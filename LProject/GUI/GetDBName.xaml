<Window x:Class="LProject.GetDBName"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LProject"
        mc:Ignorable="d"
        Title="GetDBName" Height="300" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <Label Margin="4,0,0,0" VerticalAlignment="Center">Имя БД</Label>

            <TextBox Name="DBName"  Width="150" Height="19" Margin="8,0,0,0"/>
            </StackPanel>
            <Button x:Name="Ok" Content="Применить" Click="OkClick" Width="100" Height="30" Grid.Row="9"/>
        </StackPanel>
        <Label Margin="4,0,0,0" VerticalAlignment="Bottom">Если не знаете, позовите администратора базы.</Label>
    </Grid>
</Window>
